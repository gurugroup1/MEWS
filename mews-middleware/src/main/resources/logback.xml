<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/base.xml" />

    <!-- Configure root logger to only output logs of level ERROR and above -->
    <root level="ERROR">
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- Set the log level for specific loggers -->
    <logger name="org.springframework" level="INFO" />
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>/var/log/myapp/Mews_Ec2_Logs</file> <!-- Specify the path where you want to store the log file -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Add other loggers as needed -->

</configuration>

