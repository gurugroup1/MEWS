<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>/var/log/myapp/application.log</file> <!-- Specify the path where you want to store the log file -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO"> <!-- Change the log level as per your requirements -->
        <appender-ref ref="FILE"/>
    </root>
</configuration>
